---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import Flor from "../assets/Contacto/flor.webp";

// Supports weights 100-900
import "@fontsource-variable/noto-sans-jp";
---

<Layout title="Tehuantepec | Hotel Santa Cruz Tehuantepec">
    <Header />

 
    <form action="">
        <div class="form-container">
            <h2>Formulario</h2>

            <div class="inputBox">
                <input required="" type="text" />
                <span>Numero</span>
            </div>

            <div class="inputBox">
                <input required="" type="text" />
                <span>Numero</span>
            </div>

            <div class="inputBox">
                <input required="" type="text" />
                <span>Correo</span>
            </div>

            <div class="inputBox">
                <textarea name="message" cols="30" rows="10" required="required"
                ></textarea>
            </div>

            <input type="submit" value="Enviar" class="BotonEnviarFormulario"/>
        </div>
    </form>
    <Footer />
</Layout>

<style>
    h2{
        color: rgb(80, 67, 63);
        position: relative;
        margin-left: 30px;
        top: 10px;
        
    }
    form {
        position: relative;
        width: 100%;
        height: auto;
        background-color: transparent;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px 0px;
    }

    .form-container {
        position: relative;
        width: 500px;
        background-color: rgb(235, 235, 235);
        font-family: "Noto Sans JP Variable", sans-serif;
        margin-bottom: 100px;
        margin-top: 100px;
    }
    .BotonEnviarFormulario{
        background-color: rgb(80, 67, 63);
        color: rgb(255, 216, 200);
        border: none;
        padding: 20px 50px;
        font-size: 15px;
        border-radius: 7px;
        margin-left: 30px;
        margin-bottom: 30px;
        font-weight: 600;
    }

    /* From Uiverse.io by saidbl1 */
    .inputBox {
        position: relative;
    }

    .inputBox input,
    textarea {
        padding: 15px 20px;
        outline: none;
        background: transparent;
        border-radius: 5px;
        color: #fff;
        border: 2px solid rgb(80, 67, 63);
        font-size: 1em;
        margin: 20px 30px;
        width: 70%;
    }

    .inputBox span {
        position: absolute;
        left: 0;
        padding: 33px 50px;
        pointer-events: none;
        font-size: 1em;
        transition: 0.4s cubic-bezier(0.05, 0.81, 0, 0.93);
        color: rgb(80, 67, 63);
        letter-spacing: 0em;
    }

    .inputBox input:focus ~ span,
    .inputBox input:valid ~ span {
        font-size: 0.7em;
        transform: translateX(50px) translateY(10px);
        padding: 0 5px;
        border-radius: 2px;
        background: white;
        letter-spacing: 0em;
    }
    .FlorImg{
        position: relative;
        width: 50px;
        top: 15px;
    }
</style>
