import "@fontsource-variable/noto-sans-jp";

// importar imagenes del carrusel
import Uno from "../../public/PrincipalImg.jpg";
import Dos from "../../public/segundoImg.jpg";
import Tres from "../../public/terceroImg.jpg";

import Map from "../assets/map_art.png";
---

<Layout>
	<Header />	

	

	
</Layout>

<style>
	/* Estilos del carrusel */
	.carrusel-controls button {
		display: none;
	}
	.carrusel {
		position: relative;
		width: 100%;
		max-width: 800px;
		margin: 0 auto;
		overflow: hidden;
	}

	.carrusel-inner {
		display: flex;
		transition: transform 0.5s ease-in-out;
		height: 100%; /* Ajusta seg√∫n necesites */
	}

	.carrusel-item {
		min-width: 100%;
		height: 100%;
	}

	.carrusel-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.carrusel-controls {
		position: absolute;
		top: 50%;
		width: 100%;
		display: flex;
		justify-content: space-between;
		transform: translateY(-50%);
	}

	.carrusel-control {
		background: rgba(0, 0, 0, 0.5);
		color: white;
		border: none;
		padding: 10px;
		cursor: pointer;
		font-size: 18px;
		z-index: 10;
	}

	.carrusel-indicators {
		position: absolute;
		bottom: 10px;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		gap: 5px;
	}

	.indicator {
		width: 10px;
		height: 10px;
		border-radius: 50%;
		background: var(--color-de-fondo-de-elemntos-tipo-2--);
		cursor: pointer;
	}

	.indicator.active {
		background: white;
	}

	body {
		background: rgb(255, 255, 255);
	}

	/* contenedor principal */
	.container {
		display: flex;
		position: relative;
		width: 100%;
		height: 100%;
		background-color: rgb(255, 255, 255);
	}

	.Informacion {
		display: flex;
		position: relative;
		display: flex;
		width: 50%;
		height: 100%;
		background: var(--color-de-fondo-de-elemntos-tipo-1--);
	}

	.Informacion h1 {
		font-family: "Noto Sans JP Variable", sans-serif;
		color: var(--color-de-texto-tipo-1--);
		margin: 150px 50px;
		font-size: 50px;
	}
	.Informacion h3 {
		font-family: "Noto Sans JP Variable", sans-serif;
		font-size: 25px;
		padding: 30px 50px;
		position: absolute;
		margin: 300px 5px;
		width: 450px;
		color: var(--color-de-texto-tipo-1--);
	}
	.Informacion p {
		font-family: "Geist Variable", sans-serif;
		font-size: 15px;
		padding: 30px 50px;
		position: absolute;
		margin: 350px 5px;
		width: 450px;
		color: var(--color-de-texto-tipo-1--);
	}
	.ImagenDeReferencia {
		position: relative;
		width: 50%;
		height: 100%;
		background-image: url("../../public/PrincipalImg.jpg");
		background-size: cover;
		background-position: center;
		right: 0px;
		display: inline-block;
	}

	/* contenedor de bienvenida */

	.contenedorBienvenida {
		position: relative;
		width: 100%;
		height: 100%;
		background-color: rgb(255, 255, 255);
	}

	.contenedorSub {
		position: relative;
		width: 80%;
		height: 90%;
		background-color: white;
		margin: 10% auto;
		display: flex;
	}
	.ImageneFondoBienvenida {
		position: relative;
		width: 30%;
		height: 100%;
		background: url("../../public/Fondo.jpg");
		background-size: cover;
	}

	.contenedorConcepto {
		width: 70%;
		height: 100%;
		background-color: rgb(245, 244, 244);
		position: relative;
	}

	.contenedorConcepto h2 {
		position: absolute;
		font-family: "Noto Sans JP Variable", sans-serif;
		color: var(--color-de-texto-tipo-1--);
		margin: 140px 50px;
		font-size: 30px;
	}

	.contenedorConcepto p {
		font-family: "Geist Variable", sans-serif;
		font-size: 15px;
		padding: 100px 50px;
		position: absolute;
		margin: 100px 5px;
		width: 450px;
		color: var(--color-de-texto-tipo-1--);
	}

	/*Contenedor de alimentos*/
	.ContenedorComida {
		position: relative;
		width: 100%;
		height: 100%;
		background: var(--color-de-fondo-de-elemntos-tipo-1--);
		display: flex;
	}
	.ContenedorComida img {
		position: relative;
		width: 500px;
		height: 300px;
		margin: auto;
	}

	.InfoComida {
		position: relative;
		background: rgb(245, 244, 244);
		height: 100%;
		width: 40%;
	}

	.ContenedorComida h2 {
		position: absolute;
		font-family: "Noto Sans JP Variable", sans-serif;
		color: var(--color-de-texto-tipo-1--);
		margin: 340px 50px;
		font-size: 30px;
	}

	.ContenedorComida p {
		font-family: "Geist Variable", sans-serif;
		font-size: 15px;
		padding: 100px 50px;
		position: absolute;
		margin: 300px 5px;
		width: 450px;
		color: var(--color-de-texto-tipo-1--);
	}

	/* Contenedor de mapa */
	.ContenedorComoLlegarPrincipal {
		position: relative;
		width: 100%;
		height: 100%;
		background-color: rgb(255, 255, 255);
	}

	.ContenedorComoLlegar {
		position: relative;
		width: 80%;
		height: 90%;
		background-color: rgb(31, 150, 206);
		margin: auto;
		top: 10%;
	}

	.mapa {
		width: 60%;
		position: absolute;
		right: 0px;
		top: 0px;
	}

	.ContenedorComoLlegar h2,
	p {
		font-family: "Geist Variable", sans-serif;
	}
	.ContenedorComoLlegar h2 {
		font-size: 30px;
		position: relative;
		color: white;
		margin: 0px 60px;
		top: 100px;
	}
	.ContenedorComoLlegar p {
		position: relative;
		display: flex;
		width: 500px;
		color: white;
		margin: 0px 60px;
		top: 130px;
	}
	.ContenedorComoLlegar h3 {
		font-family: "Geist Variable", sans-serif;
		position: relative;
		display: flex;
		width: 40%;
		color: rgb(228, 226, 103);
		margin: 0px 60px;
		top: 110px;
		font-size: 14px;
	}

	/* Contenedor de ayuda */
	.ContenedorDeAyuda {
		position: relative;
		width: 100%;
		height: 50%;
		background-color: white;
	}

	.ContenedorDeAyuda h2 {
		position: relative;
		font-size: 30px;
		font-family: "Geist Variable", sans-serif;
		color: var(--color-de-texto-tipo-1--);
		margin: 20px 50px;
		top: 50px;
	}
	.ContenedorDeAyuda p {
		position: relative;
		font-family: "Geist Variable", sans-serif;
		color: var(--color-de-texto-tipo-1--);
		width: 500px;
		font-size: 15px;
		margin: 20px 50px;
		top: 50px;
	}

	.reservacion button {
		position: relative;
		margin: 0px 50px;
		color: white;
		border: none;
		padding: 10px 10px;
		top: 50px;
		width: 150px;
		background-color: var(--color-de-texto-tipo-1--);
		color: var(--color-de-fondo-de-elemntos-tipo-1--);
		font-weight: 700;
		font-size: 15px;
	}


</style>

<script src="../service/carrusel.js"></script>
