---
import "@fontsource-variable/geist";
import Logo from "../assets/logo.png";
---

<header class="header">
    <div class="header-container">
        <!-- Logo -->
        <a href="/" class="logo-link">
            <img class="logo" src={Logo.src} alt="Hotel Santa Cruz Tehuantepec" />
        </a>

        <!-- Navegación principal -->
        <nav class="main-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="/" class="nav-link" id="home">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/Habitaciones" class="nav-link">Habitaciones</a>
                </li>
                <li class="nav-item">
                    <a href="/Tehuantepec" class="nav-link">Tehuantepec</a>
                </li>
                <li class="nav-item">
                    <a href="/Contacto" class="nav-link">Contacto</a>
                </li>
                <li class="nav-item reservation-item">
                    <a href="/contacto" class="nav-link reservation-btn">Reservaciones</a>
                </li>
            </ul>
        </nav>

        <!-- Menú hamburguesa para móvil -->
        <button class="mobile-menu-toggle" aria-label="Abrir menú" aria-expanded="false">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>
    </div>
</header>

<style>
    :root {
        --header-bg: rgb(255, 255, 255);
        --header-text: #2d3748;
        --header-accent: #1e3a5f;
        --reservation-bg: #1e3a5f;
        --reservation-hover: #2d5a8c;
        --shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    .header {
        background: var(--header-bg);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 1000;
        box-shadow: var(--shadow);
        transition: var(--transition);
    }

    .header.scrolled {
        background: rgb(255, 255, 255);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.15);
    }

    .header-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 80px;
    }

    .logo-link {
        display: flex;
        align-items: center;
        text-decoration: none;
    }

    .logo {
        height: 50px;
        width: auto;
        transition: var(--transition);
    }

    .logo:hover {
        transform: scale(1.05);
    }

    .main-nav {
        display: flex;
        align-items: center;
    }

    .nav-list {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
        gap: 0.5rem;
    }

    .nav-item {
        position: relative;
    }

    .nav-link {
        font-family: "Geist Variable", sans-serif;
        font-weight: 500;
        font-size: 0.95rem;
        color: var(--header-text);
        text-decoration: none;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        transition: var(--transition);
        position: relative;
    }

    .nav-link:hover {
        color: var(--header-accent);
        background: rgba(30, 58, 95, 0.05);
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: var(--header-accent);
        transition: var(--transition);
        transform: translateX(-50%);
    }

    .nav-link:hover::after {
        width: 70%;
    }

    .reservation-btn {
        background: var(--reservation-bg);
        color: white !important;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 600;
        margin-left: 0.5rem;
        transition: var(--transition);
    }

    .reservation-btn:hover {
        background: var(--reservation-hover);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(30, 58, 95, 0.3);
    }

    .reservation-btn::after {
        display: none;
    }

    .mobile-menu-toggle {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.75rem;
        gap: 0.5rem;
        width: 50px;
        height: 50px;
        justify-content: center;
        align-items: center;
        border-radius: 8px;
        transition: var(--transition);
    }

    .mobile-menu-toggle:hover {
        background: rgba(30, 58, 95, 0.05);
    }

    .hamburger-line {
        width: 28px;
        height: 3px;
        background: var(--header-text);
        transition: var(--transition);
        transform-origin: center;
        border-radius: 3px;
    }

    /* Estados del menú móvil - Animación mejorada */
    .mobile-menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(1) {
        transform: rotate(45deg) translate(8px, 8px);
    }

    .mobile-menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(2) {
        opacity: 0;
        transform: scale(0);
    }

    .mobile-menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(3) {
        transform: rotate(-45deg) translate(8px, -8px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .header-container {
            padding: 0 1rem;
            height: 80px; /* Aumentado para dar más espacio */
        }

        .logo {
            height: 45px;
        }

        .mobile-menu-toggle {
            display: flex;
        }

        .main-nav {
            position: fixed;
            top: 80px; /* Ajustado para coincidir con la altura del header */
            left: 0;
            width: 100%;
            height: calc(100vh - 80px); /* Ocupa toda la altura restante */
            background: var(--header-bg);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            transform: translateY(-100%);
            opacity: 0;
            visibility: hidden;
            transition: all 0.4s ease;
            overflow-y: auto; /* Permite scroll si el contenido es muy largo */
        }

        .main-nav.active {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        .nav-list {
            flex-direction: column;
            padding: 2rem 1.5rem;
            gap: 0.5rem; /* Espacio entre elementos del menú */
        }

        .nav-item {
            width: 100%;
            text-align: center;
        }

        .nav-link {
            display: block;
            padding: 1.25rem 1rem; /* Aumentado el padding vertical */
            font-size: 1.1rem; /* Texto más grande */
            border-radius: 8px; /* Bordes redondeados en móvil */
            border-bottom: none; /* Eliminada la línea inferior */
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(30, 58, 95, 0.1);
            transform: translateY(-2px);
        }

        .nav-link::after {
            display: none;
        }

        .reservation-item {
            margin-top: 1rem;
        }

        .reservation-btn {
            margin-left: 0;
            border-radius: 8px;
            border: none;
            padding: 1.25rem 1.5rem;
            font-size: 1.1rem;
        }
    }

    @media (max-width: 480px) {
        .header-container {
            padding: 0 1rem;
            height: 75px;
        }

        .logo {
            height: 40px;
        }

        .mobile-menu-toggle {
            width: 46px;
            height: 46px;
        }
        
        .hamburger-line {
            width: 26px;
            height: 3px;
        }
        
        .mobile-menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(1) {
            transform: rotate(45deg) translate(7px, 7px);
        }
        
        .mobile-menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(3) {
            transform: rotate(-45deg) translate(7px, -7px);
        }

        .nav-list {
            padding: 1.5rem 1rem;
        }

        .nav-link {
            padding: 1.1rem 0.75rem;
            font-size: 1.05rem;
        }

        .reservation-btn {
            padding: 1.1rem 1.25rem;
            font-size: 1.05rem;
        }
    }
</style>

<script src="../service/ServiceMenu.js"></script>