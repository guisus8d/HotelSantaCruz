---
import "@fontsource-variable/geist";

import Logo from "../assets/logo.png";
---

<div>
    <header>
        <img class="Logo" src={Logo.src} alt="" />

        <nav>
            <ul>
                <li><a href="/" id="home">Home</a></li>
                <li><a href="/habitaciones">Habitaciones</a></li>
                <li><a href="/tehuantepec">Tehuantepec</a></li>
                <li><a href="/contacto">Contacto</a></li>
                <li>
                    <a href="/contacto" class="reservacion">Reservaciones</a>
                </li>
            </ul>
        </nav>
    </header>
</div>

<style>
    header {
        position: relative;
        width: 100%;
        height: 100px;
        background-color: white;
        color: rgb(75, 74, 74);
        font-family: "Geist Variable", sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: 600;
    }

    header ul,
    li,
    a {
        list-style: none;
        text-decoration: none;
        display: inline-block;
        color: var(--color-de-texto-tipo-1--);
        font-size: 15px;
    }

    header li {
        margin: 10px 18px;
    }

    .Logo {
        position: absolute;
        width: 100px;
        left: 0px;
        margin: 0px 20px;
    }

    .reservacion {
        background-color: var(--color-de-fondo-de-elemntos-tipo-1--);
        padding: 10px 20px;
        border-radius: 5px;
    }

    @media (max-width: 768px) {
        header {

            height: 250px;

        }

        header ul,
        li,
        a {
            position: relative;
            font-size: 13px;
            top: 20px;
        }

        .Logo {
            position: absolute;
            width: 125px;
            left: 50%;
            top: 25%;
            transform: translate(-70%, -50%);

        }
    }
</style>
